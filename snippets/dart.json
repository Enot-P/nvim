            "\tconst ${1:Name}({",
            "\t\trequired super.child,",
            "\t\tsuper.key,",
            "\t});",
            "",
            "\tstatic ${1:Name} watch(BuildContext context) {",
            "\t\tfinal result = context.dependOnInheritedWidgetOfExactType<${1:Name}>();",
            "\t\tassert(result != null, 'No ${1:Name} found in context');",
            "\t\treturn result!;",
            "\t}",
            "",
            "\tstatic ${1:Name} read(BuildContext context) {",
            "\t\tfinal element = context.getElementForInheritedWidgetOfExactType<${1:Name}>();",
            "\t\tassert(element != null, 'No ${1:Name} found in context');",
            "\t\treturn element!.widget as ${1:Name};",
            "\t}",
            "",
            "\t@override",
            "\tbool updateShouldNotify(${1:Name} oldWidget) {",
            "\t\treturn ${2:true};",
            "\t}",
            "}"
        ]
    },
